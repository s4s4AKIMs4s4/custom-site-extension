{

    "name": "Getting Started Example",
    
    "description":"Build an Extension!",
    
    "version":"1.0",
    
    "manifest_version": 3,
  
    "background":{
        "service_worker":"background.js"
    },

    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["contentscript.js"]
        }
      ],



    "permissions":["storage", "declarativeContent", "activeTab", "scripting","tabs","webRequest"],
    "action":{
        "default_popup":"popup.html"
    },

    "host_permissions": [
        "*://*.google.com/"
    ]
    
}